<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/radio_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="7sp"
        android:tint="@color/colorGrey"
        android:src="@drawable/ic_radio_black_48dp"
        />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:paddingRight="7sp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/radio_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Radio"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/radio_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|right"
            android:text="radio_url"
            android:textSize="@dimen/notification_subtext_size"
            android:textColor="@color/colorPink"
            />
    </LinearLayout>

    <ToggleButton
        android:id="@+id/radio_toggle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/toggleradio_selector"
        android:focusable="false"
        android:textOff=""
        android:textOn=""/>

</LinearLayout>
